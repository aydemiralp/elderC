<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="700dp"
            android:layout_height="50dp"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/cerebrum" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/googlesans_bold"
            android:text="Elder Care"
            android:textColor="@color/white"
            android:textSize="24sp" />




        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="2"
            android:layout_margin="5dp"
            android:layout_marginTop="2dp"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center_horizontal"
            android:columnOrderPreserved="false">


            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="75dp"
                        android:layout_marginBottom="130dp"
                        android:src="@drawable/havadurumu"
                        android:layout_gravity="center"
                        tools:visibility="visible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="-120dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Sıcaklık:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextNumber2"
                        android:layout_width="51dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginRight="-30dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/white"
                        tools:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="45dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Nem:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextNumber3"
                        android:layout_width="51dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginRight="-30dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/white"
                        tools:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="45dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Durum:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/editTextNumber4"
                        android:layout_width="51dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="-20dp"
                        android:layout_marginRight="-30dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:visibility="gone" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/sensorler"
                        android:layout_marginTop="80dp"
                        android:layout_marginBottom="110dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="-100dp"
                        android:layout_marginRight="45dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Gaz:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="45dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Duman:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="45dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Hareket:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="45dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="SOS:"
                        android:textColor="@color/white"
                        android:textSize="18sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="350dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >


                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="-160dp"
                        android:src="@drawable/termometre"
                        android:layout_marginBottom="130dp"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="350dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/gray"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/alarm"
                        android:layout_marginTop="-85dp"
                        android:layout_marginBottom="110dp"/>

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-40dp"
                        android:layout_marginRight="8dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Son alarm zamanı"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="80dp"
                        android:layout_marginRight="16dp"
                        android:fontFamily="@font/googlesans_bold"
                        android:text="Son alarm türü"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>


    </LinearLayout>



</ScrollView>